{% extends 'base.html.twig' %}

{% block title %}Warina Web{% endblock %}

{% block body %}
<div class="container mt-5">
<div class="row">
    <div class="col-6">
        <img src="{{ asset('images/login_image.jfif') }}" class="img-fluid">
    </div>
    <div class="col-6">
        <form method="post">
            <h1 class="h3 mb-3 font-weight-normal text-center">Inicie Sesion</h1>
            
            {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}
    
            {% if app.user %}
            <div class="mb-3">
                You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
            </div>
            {% endif %}
    
            
            <label for="username">Correo:</label>
            <input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control"
                autocomplete="email" required autofocus>
            <label for="password">PIN:</label>
            <input type="password" name="_password" id="password" class="form-control" autocomplete="current-password"
                required>
    
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
    
            {#
                Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                See https://symfony.com/doc/current/security/remember_me.html
    
                <div class="checkbox mb-3">
                    <label>
                        <input type="checkbox" name="_remember_me"> Remember me
                    </label>
                </div>

                TEST

            #}
    
            <div class="d-grid gap-2">
                <button class="btn btn-success mt-2" type="submit">Enviar</button>
                <a class="btn btn-primary" href="{{ path('app_register') }}">Crear cuenta nueva.</a>
            </div>
        </form>
    </div>
</div>
</div>
{% endblock %}