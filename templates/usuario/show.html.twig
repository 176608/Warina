{% extends 'base.html.twig' %}

{% block title %}Usuario{% endblock %}

{% block body %}
    <h1>Mostrando Usuarios</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ usuario.id }}</td>
            </tr>
            <tr>
                <th>Nombre_user</th>
                <td>{{ usuario.nombreUser }}</td>
            </tr>
            <tr>
                <th>No_empleado</th>
                <td>{{ usuario.noEmpleado }}</td>
            </tr>
            <tr>
                <th>Es_dev</th>
                <td>{{ usuario.esDev ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_usuario_index') }}">Regresar a la lista.</a>

    <a href="{{ path('app_usuario_edit', {'id': usuario.id}) }}">Editar</a>

    {{ include('usuario/_delete_form.html.twig') }}
{% endblock %}
